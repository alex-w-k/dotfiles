{
  "languageserver": {
    "go": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "trace.server": "verbose",
      "filetypes": ["go"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"]
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    },
    "efm": {
      "command": "efm-langserver",
      "filetypes": ["vim", "python", "yaml.ansible"]
    },
    "docker-compose": {
      "command": "docker-compose-langserver",
      "args": ["--stdio"],
      "filetypes": ["docker-compose"],
    },
  }
}
